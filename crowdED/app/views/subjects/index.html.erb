<div id="search_Home" class="search">	
	<%= form_tag subjects_path, :method => 'get' do%>
		<%= text_field_tag :search, params[:search], :id => 'inptSearch_Home', :class => 'inptSearch', :placeholder => "Search" %>
		<%= submit_tag "Search", :name => nil, :class => 'searchsubmit' %>
	<% end %>
</div>
<div id="pagetitle_Home" class="pagetitle">
	<span class="pagetext">Browse Subjects</span>
</div>
<div id="contentlist_Subject" class="contentlist">
	<ul>
	
	<% @subjects.each do |subject| %>
    	<li>
    	<span class="subjecttitle"><%= link_to subject.name, subject %></span>
    	<span class="subjectlinks"><%= subject.resources.size %> Resources </span>
    	</li>
    <% end %>
    </ul>
</div>
